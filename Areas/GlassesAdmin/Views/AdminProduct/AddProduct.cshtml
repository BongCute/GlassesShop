@{
    Layout = "~/Areas/GlassesAdmin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h1 color="red">Add Product</h1>
            <form action="/GlassesAdmin/AdminProduct/AddProduct" method="POST" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Name </label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="Name" placeholder="Tên Sản Phẩm" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Description</label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="Description" placeholder="Mô tả sản phẩm " class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="selectLg" class=" form-control-label">List Product</label></div>
                    <div class="col-12 col-md-4">
                        <select name="selectLg" id="selectLg" class="form-control">
                            <option value="1">Kính Thời Trang Nam</option>
                            <option value="2">Kính Thời Trang Nữ</option>
                            <option value="3">Kính Cận</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Price</label></div>
                    <div class="col-12 col-md-4"><input type="text" id="text-input" name="price" placeholder="150.000" class="form-control"></div>
                    <div class="col-md-3">VNĐ</div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Sale</label></div>
                    <div class="col-12 col-md-4"><input type="text" id="text-input" name="discount" placeholder="100.000" class="form-control"></div>
                    <div class="col-md-3">VNĐ</div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Color</label></div>
                    <div class="col-12 col-md-4">
                        <input type="text" id="text-input" name="Color" placeholder="Đen" class="form-control" >
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Quantity</label></div>
                    <div class="col-12 col-md-4">
                        <input type="text" id="text-input" name="Quantity" placeholder="10" class="form-control" >
                    </div>
                </div>
        
                <div class="page-header">
                    <a>Images</a><br />
                    <img class="img-thumbnail" src="http://placehold.it/400x400" alt="">
                </div>

                <fieldset class="form-group">
                    @*<input type="file" class="form-control-file" id="image" name="HinhMinhHoa">*@
                    <input type="file" name="uploadFile" />
                </fieldset>

                @*<input type="file" name="uploadFile" />*@

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Add Product
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>


