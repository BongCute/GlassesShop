@using Model.EF
@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Areas/GlassesAdmin/Views/Shared/_Layout.cshtml";
    List<Product> ProductList = ViewBag.ProductList;
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">

                    <small>Product List</small>
                </h1>
            </div>
            <div class="card-header col-sm-11">
                <form class="form-inline my-2 my-lg-0 " method="post" action="@Url.Action("Search")">


                    <div class="form-group col-sm-2">
                        <select class="form-control col-sm-12">
                            <option>Kính Thời Trang Nam </option>
                            <option>Kính Thời Trang Nữ</option>
                            <option>Kính Cận</option>
                        </select>
                    </div>

                    <div class="form-group col-sm-2">
                        <select class="form-control col-sm-12">
                            <option value="Giá">Giá</option>
                            <option value="0-3000">0-3000</option>
                            <option value="3000-5000">3000-5000</option>
                            <option value="5000-7000">5000-7000</option>
                        </select>
                    </div>

                    <input class="form-control mr-sm-2 col-sm-2" type="text" placeholder="Màu">

                    <button type="button" class="btn btn-dark" class="col-sm-5">Tìm kiếm</button>
                </form>
            </div>


            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr align="center">
                        <th>STT</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Sale</th>
                        <th>Color</th>
                        <th>Quantity</th>
                        <th>Description</th>
                        <th>CreateProduct</th>
                        <th>View</th>
                        <th>Edit</th>     
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;

                        foreach (var item in ProductList)
                        {
                            <tr class="odd gradeX" align="center">
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td><img src="~/Assets/Client/images/@item.imageLink" style="width=50px"/></td>
                                <td>@item.price</td>
                                <td>@item.discount</td>
                                <td>@item.Color</td>
                                <td>@item.Quantity</td>
                                <td>@item.Description</td>
                                <td>@item.CreateProduct</td>
                                <td><p data-placement="top" data-toggle="tooltip" title="View"><a href="~/GlassesAdmin/AdminProduct/AddProduct"><span class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"><span class="fas fa-eye"></span></span></a></p></td>
                                <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a href="~/GlassesAdmin/AdminProduct/EditProduct?ID_Product=@item.ID_Product"><span class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="fa fa-edit"></span></span></a></p></td>
                                <td><p data-placement="top" data-toggle="tooltip" title="Delete"><a onclick="deleteBook(@item.ID_Product)"><span class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><i class="fa fa-trash" aria-hidden="true"></i></span></a></p></td>
                            </tr>
                            i++;
                        }
                    }


                </tbody>
            </table>
        </div>

    </div>

</div>

