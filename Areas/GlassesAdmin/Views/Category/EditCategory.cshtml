@{
    Layout = "~/Areas/GlassesAdmin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h1 color="red">Add Category</h1>
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">ID_Category </label></div>
                    <div class="col-12 col-md-4"><input type="text" id="text-input" name="text-input" placeholder="ID danh mục" class="form-control"></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="selectLg" class=" form-control-label">List Product</label></div>
                    <div class="col-12 col-md-4">
                        <select name="selectLg" id="selectLg" class="form-control">
                            <option value="1"> Mắt Kính Thời Trang Nam</option>
                            <option value="2">Mắt Kính Thời Trang Nữ</option>
                            <option value="3">Mắt Kính Cận</option>
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Description Category</label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="text-input" placeholder="Mô tả danh mục " class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Create Date Category</label></div>
                    <div class="col-12 col-md-4"><input type="text" id="text-input" name="text-input" placeholder="Ngày Tạo danh mục " class="form-control"></div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Edit Category
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    </div>
</div>



