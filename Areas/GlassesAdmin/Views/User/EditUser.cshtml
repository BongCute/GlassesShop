@{
    Layout = "~/Areas/GlassesAdmin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3>Edit User</h3>
        </div>
        <div class="card-body card-block">
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">User Name</label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="text-input" placeholder="Họ tên" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">Email</label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="text-input" placeholder="abc@gmail.com" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">PassWord</label></div>
                    <div class="col-12 col-md-7"><input type="password" id="text-input" name="text-input" placeholder="Nhập Mật Khẩu" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">RePassWord</label></div>
                    <div class="col-12 col-md-7"><input type="password" id="text-input" name="text-input" placeholder="Xác Nhận Lại Mật Khẩu" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">Date of Birth</label></div>
                    <div class="col-12 col-md-7"><input type="text" id="text-input" name="text-input" placeholder="Ngày Sinh " class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="text-input" class=" form-control-label">Address</label></div>
                    <div class="co-12 col-md-7"><input type="text" id="text-input" name="text-input" placeholder=" Địa Chỉ  " class="form-control"></div>
                </div>
                <div class="page-header">
                    <h3>Avata</h3>
                    <hr>
                    <img class="img-thumbnail" src="http://placehold.it/700x500" alt="">
                </div>
                <fieldset class="form-group">
                    <input type="file" class="form-control-file" id="image">
                </fieldset>
            </form>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Edit User
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    </div>
</div>

