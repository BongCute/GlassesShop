@using Model.EF
@{
    ViewBag.Title = "AllInvoice";
    Layout = "~/Areas/GlassesAdmin/Views/Shared/_Layout.cshtml";
    List<Invoice> InvoiceList = ViewBag.InvoiceList;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Invoice
                    <small>List</small>
                </h1>
            </div>
        </div>
        <div class="card-header col-sm-11">
            <form class="form-inline my-2 my-lg-0 ">
                <input class="form-control mr-sm-2 col-sm-2" type="text" placeholder="ID_Invoice">
                <button type="button" class="btn btn-dark" class="col-sm-5">Tìm kiếm</button>
            </form>
        </div>
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr align="center">
                    <th>STT</th>
                    <th>ID_Invoice</th>
                    <th>ID_Product</th>
                    <th>ID_Order</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>View</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;

                    foreach (var item in InvoiceList)
                    {
                <tr class="odd gradeX" align="center">
                    <td>@i</td>
                    <td>@item.ID_Invoice</td>
                    <td>@item.ID_Product</td>
                    <td>@item.ID_Order</td>
                    <td>@item.quantity</td>
                    <td>@item.amount</td>
                    <td>@item.status</td>
                    <td><p data-placement="top" data-toggle="tooltip" title="View"><a href="/GlassesAdmin/AdminProduct/ListInvoice"><span class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"><span class="fas fa-eye"></span></span></a></p></td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Delete"><a onclick="deleteBook(@item.ID_Invoice)"><span class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><i class="fa fa-trash" aria-hidden="true"></i></span></a></p></td>
                </tr>
                        i++;
                    }
                }

            </tbody>
        </table>
    </div>
</div>



